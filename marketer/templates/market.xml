<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE yml_catalog SYSTEM "shops.dtd">
{% spaceless %}
<yml_catalog date="{{ date }}">
<shop>
	<name>Your company</name>
	<company>Your company</company>
	<url>http://www.company.com/</url>
	
	<currencies>
		<currency id="RUR" rate="1" plus="0"/>
	</currencies>
	
	<categories>
		<category id="1">Computers</category>
		<category id="10" parentId="1">Servers</category>
	</categories>
	
	<offers>
		{% for offer in offers %}
		<offer id="{{ offer.id }}" type="vendor.model" available="true">
			<url>{{ offer.url }}</url>
			<price>{{ offer.price }}</price>
			<currencyId>RUR</currencyId>
			<categoryId>10</categoryId>
			<picture>{{ offer.picture }}</picture>
			<delivery>false</delivery>
			<typePrefix>Server</typePrefix>
			<vendor>Vendor</vendor>
			<vendorCode>{{ offer.vendorcode }}</vendorCode>
			<model>{{ offer.model }}</model>
			<description>{{ offer.description }}</description>
			<manufacturer_warranty>true</manufacturer_warranty>
			<country_of_origin>Russia</country_of_origin>

			{% for param in offer.params %}
			<param name="{{ param.0 }}">{{ param.1 }}</param>
			{% endfor %}
		</offer>
		{% endfor %}
	</offers>
</shop>
</yml_catalog>
{% endspaceless %}
